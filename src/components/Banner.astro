---
interface Props {
  title: string;
  description?: string;
  image?: string;
  breadcrumbs?: { label: string; href?: string }[];
}

const { title, description, image, breadcrumbs } = Astro.props;

// Varsayılan bir arka plan rengi (görsel yoksa)
const defaultBg = "bg-gray-900";
---

<!-- Banner Section -->
<section 
  class={`relative bg-cover bg-center h-[20vh] sm:h-[30vh] flex items-center justify-center text-white ${image ? '' : defaultBg}`}
  style={image ? `background-image: url('${image}');` : ''}
>
  <!-- Overlay / Karartma -->
  <div class="absolute inset-0 bg-black opacity-70"></div>

  <!-- İçerik -->
  <div class="relative z-10 max-w-4xl mx-auto px-4 text-center">
    
    <!-- Başlık -->
    <h1 class="text-3xl sm:text-3xl md:text-4xl font-extrabold mb-4">
      {title}
    </h1>

    <!-- Açıklama -->
    {description && (
      <p class="text-lg sm:text-xl md:text-2xl text-gray-200 mb-6">
        {description}
      </p>
    )}

    <!-- Breadcrumb -->
    {breadcrumbs && breadcrumbs.length > 0 && (
      <nav class="flex justify-center mt-6" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
        {breadcrumbs.map((crumb, index) => (
        <li class="inline-flex items-center">
            {crumb.href ? (
            <a href={crumb.href} class="inline-flex items-center text-sm font-medium text-gray-300 hover:text-white transition-colors">
                {crumb.label}
            </a>
            ) : (
            <span class="text-sm font-medium text-gray-300">
                {crumb.label}
            </span>
            )}
            {index < breadcrumbs.length - 1 && (
            <svg class="w-4 h-4 text-gray-400 mx-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            )}
        </li>
        ))}
        </ol>
      </nav>
    )}
  </div>
</section>