---
import { info } from "../../data/info"
---
<section class="bg-red-600 py-6">
    <div class="max-w-screen-xl mx-auto px-4">
        <div class="flex flex-col md:flex-row items-center justify-between">
            <div class="text-center md:text-left mb-4 md:mb-0">
                <h3 class="text-2xl font-bold text-white mb-2">Acil Durumda Hemen Arayın!</h3>
                <p class="text-red-100">7/24 kesintisiz hizmet, Bursa ve Çevresine hızlı müdahale</p>
            </div>
            <div class="flex flex-col sm:flex-row items-center space-y-3 sm:space-y-0 sm:space-x-4">
                <a href={`tel:${info.tel}`} class="flex items-center justify-center w-full sm:w-auto bg-white text-red-600 hover:bg-gray-100 focus:ring-4 focus:ring-red-300 font-bold rounded-lg text-xl px-8 py-4 text-center transition-all duration-300 transform hover:scale-105">
                    <svg class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                    </svg>
                    {info.phone}
                </a>
            </div>
        </div>
    </div>
</section>