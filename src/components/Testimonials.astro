---
import { testimonials } from "../../data/testimonials";
---

<style>
  #yorumlar {
    position: relative;
  }
  #testimonialContainer {
    overflow: hidden;
    width: 100%;
  }
  .testimonial-track {
    display: flex;
    transition: transform 0.5s ease;
  }
  .testimonial-item {
    flex: 0 0 33.3333%; /* 3 kart görünür */
    box-sizing: border-box;
    padding: 1rem;
  }
  .testimonial-card {
    background: white;
    padding: 1.5rem;
    border-radius: 0.5rem;
    box-shadow: 0 8px 20px rgb(0 0 0 / 0.1);
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  /* Butonlar */
  button#prevBtn,
  button#nextBtn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background-color: white;
    box-shadow: 0 2px 8px rgb(0 0 0 / 0.15);
    border: none;
    font-size: 2rem;
    line-height: 1;
    color: #555;
    cursor: pointer;
    z-index: 20;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.2s ease;
  }
  button#prevBtn:hover,
  button#nextBtn:hover {
    background-color: #f3f4f6;
  }
  button#prevBtn {
    left: -60px;
  }
  button#nextBtn {
    right: -60px;
  }
</style>

<section id="yorumlar" class="py-16 bg-gray-50">
  <div class="max-w-screen-xl mx-auto px-4 relative">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">Müşteri Yorumları</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">Memnun müşterilerimizin deneyimleri</p>
    </div>

    <!-- Önceki Butonu -->
    <button id="prevBtn" aria-label="Önceki">‹</button>

    <!-- Slider Container -->
    <div id="testimonialContainer">
      <div class="testimonial-track" id="testimonialTrack">
        {testimonials.map((t, i) => (
          <div class="testimonial-item" key={i}>
            <article class="testimonial-card">
              <div class="flex items-center mb-4">
                <div class="flex text-yellow-400">
                  {[...Array(5)].map((_, starIndex) => (
                    <svg
                      key={starIndex}
                      class="w-5 h-5"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                      xmlns="http://www.w3.org/2000/svg"
                      aria-hidden="true"
                    >
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  ))}
                </div>
              </div>
              <p class="text-gray-600 mb-4 italic">"{t.message}"</p>
              <div class="flex items-center">
                <div
                  class={`w-10 h-10 rounded-full flex items-center justify-center text-white font-bold ${
                    i === 0 ? "bg-red-600" : i === 1 ? "bg-blue-600" : "bg-green-600"
                  }`}
                >
                  {t.name.charAt(0)}
                </div>
                <div class="ml-3">
                  <p class="font-semibold text-gray-900">{t.name}</p>
                  <p class="text-sm text-gray-500">{t.location}</p>
                </div>
              </div>
            </article>
          </div>
        ))}
      </div>
    </div>

    <!-- Sonraki Butonu -->
    <button id="nextBtn" aria-label="Sonraki">›</button>
  </div>
</section>

<script lang="ts">
  const track = document.getElementById("testimonialTrack") as HTMLElement;
  const items = document.querySelectorAll(".testimonial-item");
  const totalItems = items.length;
  const visibleCount = 3;

  let currentIndex = 0;

  function updateCarousel() {
    const shiftPercentage = (100 / visibleCount) * currentIndex;
    // transform ile kaydırıyoruz, negatif sola kaydırma
    track.style.transform = `translateX(-${shiftPercentage}%)`;
  }

  window.addEventListener("load", () => {
    updateCarousel();

    document.getElementById("nextBtn")?.addEventListener("click", () => {
      currentIndex++;
      if (currentIndex > totalItems - visibleCount) currentIndex = 0;
      updateCarousel();
    });

    document.getElementById("prevBtn")?.addEventListener("click", () => {
      currentIndex--;
      if (currentIndex < 0) currentIndex = totalItems - visibleCount;
      updateCarousel();
    });
  });
</script>
