---
// BlogSection.astro
export interface Props {
  title?: string;
  subtitle?: string;
}

const { title = "Son Blog Yazıları", subtitle = "En güncel içeriklerimizi keşfedin" } = Astro.props;

// Örnek blog verileri - gerçek projede bu veriler API'den gelecek
const blogPosts = [
  {
    id: 1,
    title: "Web Geliştirmede Modern Yaklaşımlar",
    excerpt: "2024'te web geliştirme dünyasında öne çıkan teknolojiler ve yaklaşımlar hakkında detaylı bir inceleme.",
    image: "https://images.unsplash.com/photo-1461749280684-dccba630e2f6?w=400&h=250&fit=crop",
    date: "15 Mart 2024",
    category: "Teknoloji",
    readTime: "5 dk"
  },
  {
    id: 2,
    title: "UX Tasarımında Renk Psikolojisi",
    excerpt: "Kullanıcı deneyiminde renklerin etkisi ve doğru renk seçiminin önemi üzerine detaylı bir rehber.",
    image: "https://images.unsplash.com/photo-1561070791-2526d30994b5?w=400&h=250&fit=crop",
    date: "12 Mart 2024",
    category: "Tasarım",
    readTime: "7 dk"
  },
  {
    id: 3,
    title: "JavaScript'te Asenkron Programlama",
    excerpt: "Promise, async/await ve modern JavaScript'te asenkron işlemler hakkında kapsamlı bir kılavuz.",
    image: "https://images.unsplash.com/photo-1579468118864-1b9ea3c0db4a?w=400&h=250&fit=crop",
    date: "10 Mart 2024",
    category: "Geliştirme",
    readTime: "8 dk"
  }
];
---

<section class="blog-section py-20 bg-gradient-to-br from-slate-50 to-gray-100">
  <div class="container mx-auto px-6 max-w-7xl">
    <!-- Başlık Bölümü -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        {title}
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        {subtitle}
      </p>
    </div>

    <!-- Blog Kartları -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {blogPosts.map((post) => (
        <article class="blog-card group">
          <div class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden transform hover:-translate-y-2">
            <!-- Görsel -->
            <div class="relative overflow-hidden">
              <img 
                src={post.image} 
                alt={post.title}
                class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-110"
              />
              <div class="absolute top-4 left-4">
                <span class="bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-medium">
                  {post.category}
                </span>
              </div>
            </div>
            
            <!-- İçerik -->
            <div class="p-6">
              <div class="flex items-center text-sm text-gray-500 mb-3">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                </svg>
                {post.date}
                <span class="mx-2">•</span>
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                </svg>
                {post.readTime}
              </div>
              
              <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">
                <a href={`/blog/${post.id}`} class="hover:underline">
                  {post.title}
                </a>
              </h3>
              
              <p class="text-gray-600 mb-4 line-clamp-3">
                {post.excerpt}
              </p>
              
              <a 
                href={`/blog/${post.id}`}
                class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors"
              >
                Devamını Oku
                <svg class="w-4 h-4 ml-2 transition-transform group-hover:translate-x-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>

    <!-- Tümünü Gör Butonu -->
    <div class="text-center">
      <a 
        href="/blog"
        class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-full hover:from-blue-700 hover:to-purple-700 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl"
      >
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
        </svg>
        Tüm Blog Yazılarını Gör
        <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .blog-card:hover .blog-card-image {
    transform: scale(1.05);
  }
</style>