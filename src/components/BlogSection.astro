---
// BlogSection.astro
export interface Props {
  title?: string;
  subtitle?: string;
}

const { title = "Son Blog Yazıları", subtitle = "En güncel içeriklerimizi keşfedin" } = Astro.props;
import { blogs } from '../../data/blog';
---


<style>

  .show-more-btn {
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.3);
    color: white;
    padding: 0.75rem 2rem;
    border-radius: 2rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 0.9rem;
  }

  .show-more-btn:hover {
    background: rgba(255, 255, 255, 0.3);
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: white;
    color: #667eea;
    padding: 1rem 2rem;
    border-radius: 2rem;
    font-weight: bold;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
  }

  .cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    color: #5a67d8;
  }

  @media (max-width: 480px) {
    .cta-button {
      padding: 0.875rem 1.5rem;
      font-size: 0.9rem;
    }
  }
</style>

<section class="blog-section py-20 bg-gradient-to-br from-slate-50 to-gray-100">
  <div class="container mx-auto px-6 max-w-7xl">
    <!-- Başlık Bölümü -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        {title}
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        {subtitle}
      </p>
    </div>

    <!-- Blog Kartları -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {blogs.map((post) => (
        <article class="blog-card group">
          <div class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden transform hover:-translate-y-2">
            <!-- Görsel -->
            <div class="relative overflow-hidden">
              <img 
                src={post.image} 
                alt={post.title}
                class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-110"
              />
            </div>
            
            <!-- İçerik -->
            <div class="p-6">
              <div class="flex items-center text-sm text-gray-500 mb-3">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                </svg>
                {post.date}
              </div>
              
              <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-red-600 transition-colors">
                <a href={`/blog/${post.slug}`} class="hover:underline">
                  {post.title}
                </a>
              </h3>
              
              <p class="text-gray-600 mb-4 line-clamp-3">
                {post.desc}
              </p>
              
              <a 
                href={`/blog/${post.slug}`}
                class="inline-flex items-center text-red-600 hover:ring-red-300 font-medium transition-colors"
              >
                Devamını Oku
                <svg class="w-4 h-4 ml-2 transition-transform group-hover:translate-x-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>

    <!-- Tümünü Gör Butonu -->
    <div class="flex items-center justify-center text-center w-full">
      <a href="/blog" class="flex items-center justify-center w-full sm:w-auto bg-white text-red-600 hover:bg-gray-200 focus:ring-4 focus:ring-red-300 font-bold rounded-lg text-xl px-8 py-4 text-center transition-all duration-300 transform hover:scale-105">
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
          </svg>
          Tüm Blog Yazılarını Gör
          <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
          </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .blog-card:hover .blog-card-image {
    transform: scale(1.05);
  }
</style>