---
// BlogSection.astro
export interface Props {
  title?: string;
  subtitle?: string;
  showAllButton?: boolean;
  limit?: number;         
}

const { title = "Son Blog Yazıları", subtitle = "En güncel içeriklerimizi keşfedin", showAllButton = true, limit } = Astro.props;
import { blogs } from '../../data/blog';

const displayedBlogs = typeof limit === 'number' ? blogs.slice(0, limit) : blogs;
---

<!-- Aşağıdaki kodda blogs yerine displayedBlogs kullanıyoruz -->
<section class="blog-section py-20 bg-gradient-to-br from-slate-50 to-gray-100">
  <div class="container mx-auto px-6 max-w-7xl">
    <!-- Başlık Bölümü -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        {title}
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        {subtitle}
      </p>
    </div>

    <!-- Blog Kartları -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {displayedBlogs.map((post) => (
        <article class="blog-card group">
          <div class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden transform hover:-translate-y-2">
            <!-- Görsel -->
            <div class="relative overflow-hidden">
              <img 
                src={post.image} 
                alt={post.title}
                class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-110"
              />
            </div>
            
            <!-- İçerik -->
            <div class="p-6">
              
              <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-red-600 transition-colors">
                <a href={`/blog/${post.slug}`} title={post.title} class="hover:underline">
                  {post.title}
                </a>
              </h3>
              
              <p class="text-gray-600 mb-4 line-clamp-3">
                {post.desc}
              </p>
              
              <a 
                href={`/blog/${post.slug}`}
                title={post.title}
                class="inline-flex items-center text-red-600 hover:ring-red-300 font-medium transition-colors"
              >
                Devamını Oku
                <svg class="w-4 h-4 ml-2 transition-transform group-hover:translate-x-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>

    {showAllButton && (
      <div class="flex items-center justify-center text-center w-full">
        <a href="/blog" title="Bursa Yakin Cekici - Ateş Oto Kurtarma blog"
          class="flex items-center justify-center w-full sm:w-auto bg-white text-red-600 hover:bg-gray-200 focus:ring-2 focus:ring-red-300 font-semibold rounded-md text-base sm:text-lg px-4 sm:px-6 py-2 sm:py-3 transition-all duration-300 transform hover:scale-105">
          
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd"
                  d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
                  clip-rule="evenodd" />
          </svg>

          Tüm Blog Yazılarını Gör

          <svg class="w-4 h-4 ml-2 transition-transform group-hover:translate-x-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd"
                  d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                  clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    )}
  </div>
</section>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .blog-card:hover .blog-card-image {
    transform: scale(1.05);
  }
</style>
