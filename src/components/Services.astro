---
import { services } from "../../data/services"
---
<section id="hizmetler" class="py-16 bg-white">
  <div class="max-w-screen-xl mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">Hizmetlerimiz</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Profesyonel ekibimizle 7/24 kesintisiz oto kurtarma ve yardım hizmetleri sunuyoruz
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map(service => {
        return (
          <div class="bg-white p-6 rounded-lg shadow-lg border border-gray-200 hover:shadow-xl transition-shadow duration-300">
            <div class={`w-16 h-16 ${service.iconBg} rounded-lg flex items-center justify-center mb-4`}>
              <img src={service.iconPath} class={service.iconPath === "/images/traktor.svg" || "/images/truckicon.svg" ? "w-12 h-12" : "w-20 h-20"} alt={service.title} />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              <a href={`/hizmetler/${service.slug}`}>{service.title}</a></h3>
            <p class="text-gray-600 mb-4">{service.description}</p>
            <ul class="text-sm text-gray-500 space-y-1">
              {service.features.map(feature => (
                <li>• {feature}</li>
              ))}
            </ul>
          </div>
        )
      })}
    </div>
  </div>
</section>