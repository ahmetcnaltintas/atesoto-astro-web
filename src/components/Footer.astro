---
import { info } from "../../data/info";
const currentYear = new Date().getFullYear();
import { blogs } from "../../data/blog";
import { serviceAreas } from "../../data/serviceAreas";

const footerLinks = {
  company: [
    { name: "Hakkımızda", href: "/hakkimizda" },
    { name: "Hizmetlerimiz", href: "/hizmetler" },
    { name: "Galeri", href: "/galeri" },
    { name: "Bloglar", href: "/blog" },
    { name: "İletişim", href: "/iletisim" }
  ]
};

const socialLinks = [
  { name: "Facebook", href: "#", icon: "facebook" },
  { name: "Twitter", href: "https://x.com/atescekicibursa", icon: "twitter" },
  { name: "Instagram", href: "https://www.instagram.com/atesotocekici/", icon: "instagram" },
  { name: "Whatsapp", href: "#", icon: "whatsapp" },
];
---

<footer class="bg-white text-black">
  <!-- Ana Footer İçeriği -->
  <div class="container mx-auto px-6 py-16 max-w-7xl">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8">
      
      <!-- Logo ve Açıklama -->
      <div class="lg:col-span-3">
        <div class="mb-6">
          <a href="/" title="Bursa Yakın Çekici" class="inline-block">
            <div class="flex items-center space-x-3">
              <img src="/images/ateslogo.png" class="w-40" alt="ates oto cekici logo" title="Bursa Yakin Cekici - Ateş Oto Kurtarma Logo">
            </div>
          </a>
        </div>
        
        <p class="text-gray-600 mb-6 max-w-md leading-relaxed">
          {info.footerContent}
        </p>
        
        <!-- İletişim Bilgileri -->
        <div class="space-y-3">
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
            </svg>
            <span class="text-gray-600">{info.email}</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
            </svg>
            <span class="text-gray-600">{info.address}</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
            </svg>
            <span class="text-gray-600">{info.phone}</span>
          </div>
        </div>
      </div>

      <!-- Şirket Linkleri -->
      <div>
        <h3 class="text-lg font-semibold mb-6 text-black">Sayfalar</h3>
        <ul class="space-y-3">
          {footerLinks.company.map((link) => (
            <li>
              <a 
                href={link.href}
                title={link.name}
                class="text-gray-600 hover:text-black transition-colors duration-200 hover:underline"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Kaynaklar -->
      <div>
        <h3 class="text-lg font-semibold mb-6 text-black">Hizmet Bölgeleri</h3>
        <ul class="space-y-3">
          {serviceAreas
            .filter((link) => link.priority === "high")
            .map((link) => (
              <li>
                <a 
                  href="/"
                  title={link.name}
                  class="text-gray-600 hover:text-black transition-colors duration-200 hover:underline"
                >
                  {link.name}
                </a>
              </li>
          ))}
        </ul>
      </div> 

    </div>

  </div>

  <!-- Alt Footer -->
  <div class="border-t text-white border-gray-800 bg-gray-800">
    <div class="container mx-auto px-6 py-6 max-w-7xl">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        
        <!-- Telif Hakkı -->
        <div class="text-white-600 text-sm">
          © {currentYear} Ateş Oto Kurtarma. Tüm hakları saklıdır.
        </div>

        <!-- Sosyal Medya Linkleri -->
        <div class="flex space-x-4">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              title="Bursa Yakin Cekici - Ateş Oto Kurtarma Sosyal Medya"
              class="w-10 h-10 bg-white hover:bg-gray-700 rounded-full flex items-center justify-center transition-all duration-200 hover:scale-110 group"
              aria-label={social.name}
            >
              {social.icon === 'facebook' && (
                <svg class="w-5 h-5 text-gray-600 group-hover:text-red-400 transition-colors" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M20 10c0-5.523-4.477-10-10-10S0 4.477 0 10c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V10h2.54V7.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V10h2.773l-.443 2.89h-2.33v6.988C16.343 19.128 20 14.991 20 10z" clip-rule="evenodd"/>
                </svg>
              )}
              {social.icon === 'twitter' && (
                <svg class="w-5 h-5 text-gray-600 group-hover:text-red-400 transition-colors" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 5.5c-.694.447-1.46.752-2.27.89a3.96 3.96 0 0 0 1.735-2.172 7.838 7.838 0 0 1-2.505.96 3.918 3.918 0 0 0-6.68 3.57A11.113 11.113 0 0 1 3.15 4.812a3.914 3.914 0 0 0 1.21 5.223 3.912 3.912 0 0 1-1.774-.49v.05a3.92 3.92 0 0 0 3.14 3.84 3.94 3.94 0 0 1-1.77.07 3.92 3.92 0 0 0 3.66 2.72A7.867 7.867 0 0 1 2 18.5a11.108 11.108 0 0 0 6.02 1.76c7.21 0 11.157-5.974 11.157-11.157 0-.17-.004-.34-.012-.51a7.965 7.965 0 0 0 1.95-2.035 7.876 7.876 0 0 1-2.283.625A3.916 3.916 0 0 0 22 4.5a7.825 7.825 0 0 1-2.32.64A3.919 3.919 0 0 0 18.244 5.5z"/>
                </svg>
              )}
              {social.icon === 'instagram' && (
                <svg class="w-5 h-5 text-gray-600 group-hover:text-red-400 transition-colors" fill="currentColor" viewBox="0 0 20 20">
                  <path d='M14.017 0h-8.07A5.954 5.954 0 0 0 0 5.948v8.07a5.954 5.954 0 0 0 5.948 5.947h8.07a5.954 5.954 0 0 0 5.947-5.948v-8.07A5.954 5.954 0 0 0 14.017 0zm3.94 14.017a3.94 3.94 0 0 1-3.94 3.94h-8.07a3.94 3.94 0 0 1-3.939-3.94v-8.07a3.94 3.94 0 0 1 3.94-3.939h8.07a3.94 3.94 0 0 1 3.939 3.94v8.07z'/><path d='M9.982 4.819A5.17 5.17 0 0 0 4.82 9.982a5.17 5.17 0 0 0 5.163 5.164 5.17 5.17 0 0 0 5.164-5.164A5.17 5.17 0 0 0 9.982 4.82zm0 8.319a3.155 3.155 0 1 1 0-6.31 3.155 3.155 0 0 1 0 6.31z'/><circle cx='15.156' cy='4.858' r='1.237'/>
                </svg>
              )}
              {social.icon === 'whatsapp' && (
                <svg class="w-5 h-5 text-gray-600 group-hover:text-red-400 transition-colors" fill="currentColor" viewBox="0 0 20 20">
                  <path d='M9.516.012C4.206.262.017 4.652.033 9.929a9.798 9.798 0 0 0 1.085 4.465L.06 19.495a.387.387 0 0 0 .47.453l5.034-1.184a9.981 9.981 0 0 0 4.284 1.032c5.427.083 9.951-4.195 10.12-9.58C20.15 4.441 15.351-.265 9.516.011zm6.007 15.367a7.784 7.784 0 0 1-5.52 2.27 7.77 7.77 0 0 1-3.474-.808l-.701-.347-3.087.726.65-3.131-.346-.672A7.62 7.62 0 0 1 2.197 9.9c0-2.07.812-4.017 2.286-5.48a7.85 7.85 0 0 1 5.52-2.271c2.086 0 4.046.806 5.52 2.27a7.672 7.672 0 0 1 2.287 5.48c0 2.052-.825 4.03-2.287 5.481z'/><path d='M14.842 12.045l-1.931-.55a.723.723 0 0 0-.713.186l-.472.478a.707.707 0 0 1-.765.16c-.913-.367-2.835-2.063-3.326-2.912a.694.694 0 0 1 .056-.774l.412-.53a.71.71 0 0 0 .089-.726L7.38 5.553a.723.723 0 0 0-1.125-.256c-.539.453-1.179 1.14-1.256 1.903-.137 1.343.443 3.036 2.637 5.07 2.535 2.349 4.566 2.66 5.887 2.341.75-.18 1.35-.903 1.727-1.494a.713.713 0 0 0-.408-1.072z'/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Responsive düzenlemeler */
  @media (max-width: 768px) {
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
</style>