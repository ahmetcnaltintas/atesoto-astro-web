---
import Layout from "../layouts/Layout.astro";
import Banner from "../components/Banner.astro";
import CallAction from "../components/CallAction.astro";
import { info } from "../../data/info";

const breadcrumbs = [
    { label: "Anasayfa", href: "/"},
    { label: "İletişim", href: "/iletisim"},
]

const contactInfo = [
    {
        icon: "phone",
        title: "Acil Kurtarma Hattı",
        subtitle: "7/24 Hizmet",
        info: "+90 530 854 88 16",
        bgColor: "bg-red-500",
        textColor: "text-red-600",
        bgLight: "bg-red-50"
    },
    {
        icon: "phone",
        title: "Yedek Hat",
        subtitle: "7/24 Hizmet",
        info: "+90 532 737 35 65",
        bgColor: "bg-blue-500",
        textColor: "text-blue-600",
        bgLight: "bg-blue-50"
    },
    {
        icon: "mail",
        title: "E-posta",
        subtitle: "Bilgi ve Destek",
        info: "atesotokurtarma16@gmail.com",
        bgColor: "bg-green-500",
        textColor: "text-green-600",
        bgLight: "bg-green-50"
    },
    {
        icon: "location",
        title: "Adres",
        subtitle: "Merkez",
        info: "Bursa/Yıldırım",
        bgColor: "bg-purple-500",
        textColor: "text-purple-600",
        bgLight: "bg-purple-50"
    }
];

---

<Layout
    title="İletişim"
    description="Ateş Oto Kurtarma ile iletişime geçin. Bursa'da 7/24 yol yardım ve çekici hizmetleri için bize telefon, WhatsApp veya e-posta ile ulaşın."
    jsonLdType="breadcrumb"
    jsonLdData={{ breadcrumbs: breadcrumbs }}
>
    <div class="mt-20">
        <Banner 
            title="İletişim"
            description="7/24 profesyonel oto kurtarma hizmeti için bizimle iletişime geçin"
            image="/images/page-banner.jpg"
            breadcrumbs={breadcrumbs}
        />

        <!-- İletişim Kartları -->
        <section class="py-16 bg-gray-50">
            <div class="container mx-auto px-4">
                <div class="text-center mb-12">
                    <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
                        Bizimle İletişime Geçin
                    </h2>
                    <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                        Acil durumlarınızda 7/24 hizmetinizdeyiz. İhtiyacınız olan yardım için hemen arayın!
                    </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                    {contactInfo.map((contact) => (
                        <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 p-6 text-center group">
                            <div class={`inline-flex items-center justify-center w-16 h-16 rounded-full ${contact.bgLight} mb-4 group-hover:scale-110 transition-transform duration-300`}>
                                {contact.icon === 'phone' && (
                                    <svg class={`w-8 h-8 ${contact.textColor}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                    </svg>
                                )}
                                {contact.icon === 'mail' && (
                                    <svg class={`w-8 h-8 ${contact.textColor}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                    </svg>
                                )}
                                {contact.icon === 'location' && (
                                    <svg class={`w-8 h-8 ${contact.textColor}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                )}
                            </div>
                            <h3 class="text-xl font-bold text-gray-800 mb-2">{contact.title}</h3>
                            <p class="text-sm text-gray-500 mb-3">{contact.subtitle}</p>
                            <p class={`font-semibold ${contact.textColor} break-words`}>{contact.info}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- İletişim Formu ve Bilgiler -->
        <section class="py-16 bg-white">
            <div class="container mx-auto px-4">
                <div class="grid grid-cols-1 lg:grid-cols-1 gap-12">
                    <!-- İletişim Formu -->
                    <div>
                        <div class="mb-8">
                            <h2 class="text-3xl font-bold text-gray-800 mb-4">Destek Talebi</h2>
                            <p class="text-gray-600">Sorularınız için formu doldurun, en kısa sürede size dönüş yapalım.</p>
                        </div>

                        <form class="space-y-6" id="contactForm">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">Ad</label>
                                    <input type="text" id="firstName" name="firstName" required
                                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                                </div>
                                <div>
                                    <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">Soyad</label>
                                    <input type="text" id="lastName" name="lastName" required
                                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                                </div>
                            </div>

                            <div>
                                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">E-posta</label>
                                <input type="email" id="email" name="email" required
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                            </div>

                            <div>
                                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Telefon</label>
                                <input type="tel" id="phone" name="phone" required
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                            </div>

                            <div>
                                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Mesaj</label>
                                <textarea id="message" name="message" rows="5" required
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors resize-vertical"
                                    placeholder="Lütfen durumunuzu detaylı bir şekilde açıklayın..."></textarea>
                            </div>

                            <div class="flex items-start">
                                <div class="flex h-5 items-center">
                                    <input id="privacy" name="privacy" type="checkbox" required
                                        class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                                </div>
                                <div class="ml-3 text-sm">
                                    <label for="privacy" class="text-gray-700">
                                        <a href="/kvkk" class="text-blue-600 hover:text-blue-800">Kişisel Verilerin Korunması</a> 
                                        metnini okudum ve kabul ediyorum.
                                    </label>
                                </div>
                            </div>

                            <button type="submit" 
                                class="w-full bg-blue-600 text-white py-3 px-6 rounded-lg font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-300">
                                Gönder
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </section>

        <!-- Harita -->
        <section class="py-16 bg-gray-100">
            <div class="container mx-auto px-4">
                <div class="text-center mb-12">
                    <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">Konumumuz</h2>
                    <p class="text-lg text-gray-600">Bursa merkez lokasyonumuzdan tüm bölgelere hizmet veriyoruz</p>
                </div>

                <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
                    <div class="h-96 bg-gray-300 relative">
                        <!-- Google Maps Embed - Bursa koordinatları -->
                        <iframe 
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d48348.52465813283!2d29.01486!3d40.18563!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14ca3e121972492b%3A0x1e5c7e1c4b0e6b0a!2sBursa%2C%20Turkey!5e0!3m2!1sen!2s!4v1647123456789!5m2!1sen!2s"
                            width="100%" 
                            height="100%" 
                            style="border:0;" 
                            allowfullscreen="" 
                            loading="lazy" 
                            referrerpolicy="no-referrer-when-downgrade"
                            class="w-full h-full">
                        </iframe>
                    </div>
                    <div class="p-6 bg-white">
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                            <div class="text-center">
                                <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mx-auto mb-3">
                                    <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                </div>
                                <h4 class="font-bold text-gray-800">Adres</h4>
                                <p class="text-gray-600 text-sm">Bursa/Yıldırım</p>
                            </div>
                            <div class="text-center">
                                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-3">
                                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                </div>
                                <h4 class="font-bold text-gray-800">Müdahale Süresi</h4>
                                <p class="text-gray-600 text-sm">Ortalama 30-60 dakika</p>
                            </div>
                            <div class="text-center">
                                <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-3">
                                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                </div>
                                <h4 class="font-bold text-gray-800">Hizmet Alanı</h4>
                                <p class="text-gray-600 text-sm">Bursa ve çevre iller</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <CallAction />
    </div>
</Layout>